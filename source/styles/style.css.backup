#rental {
  background-color: #FFFFFF;
  border-radius: 1rem;
  font-weight: bold;
  font-size: large;
}

#rental img {
  box-shadow: none;
  filter: drop-shadow(none);
}

#equipments img {
  box-shadow: none;
  filter: drop-shadow(none);
}

#equipments {
  background-color: #FFFFFF;
  font-size: x-large;

}

#footer {
  background-color: #D9851E;
}

#footer .nav-link,
#footer .text-body-secondary,
#footer .bi {
  color: #FAF6EF !important;
}

#carouselAutoplaying {
  background-color: #FAF6EF;
}

#myCarousel {
  background-color: #FAF6EF;
}

#contacts {
  font-size: x-large;

}

#contacts .bi {
  color: #F6A728;
  font-size: 2rem;
}

.btn-primary {
  background: #F6A728;
  border-color: #F6A728;
  color: #273B46
}

.btn-primary:hover,
.btn-primary:focus {
  background: none;
  border-color: #273B46;
  color: #273B46;
}

.btn-secondary {
  background: none;
  border-color: #273B46;
  color: #273B46;
}

.btn-secondary:hover,
.btn-secondary:focus {
  background: #F6A728;
  border-color: #F6A728;
  color: #273B46;
}

.text-body-emphasis {
  color: #F6A728 !important;
}

.accordion {
  --bs-accordion-bg: #FAF6EF;
  --bs-accordion-color: #1F2933;
  --bs-accordion-border-color: #F6A728;
  --bs-accordion-active-color: #1F2933;
  --bs-accordion-active-bg: #F6A728;
  --bs-accordion-inner-border-radius:#F6A728;
}

.lead {
  font-size: 1.5rem;
  font-weight: 400;
  color: #273B46;
  margin-bottom: 1.5rem;
}

/* Pode ser colocado em /source/styles/style.css ou dentro de <style> */
.popover {
    display: inline-block;
    width: auto;
    min-width: 0;
    padding: 0;
    margin: 0;
}


.hero {
  position: relative;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  width: 100%;
  display: flex;
  align-items: stretch;
  overflow: hidden; /* Garante que o vídeo não ultrapasse o container */
}

.hero video.bg-video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* Faz o vídeo cobrir todo o container */
  z-index: 0;
  pointer-events: none; /* Permite clicar nos elementos acima do vídeo */
}

.hero > *:not(video) {
  position: relative;
  z-index: 1;
}

.summary {
  background-color: rgba(255, 255, 255, 0.8); /* Fundo branco com transparência */
  padding: 2rem; /* Espaçamento interno */
  border-radius: 1rem; /* Bordas arredondadas */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Sombra suave */
  height: auto; /* Ajusta a altura automaticamente */
  display: flex;
  flex-direction: column;
  justify-content: center; /* Centraliza verticalmente o conteúdo */
}